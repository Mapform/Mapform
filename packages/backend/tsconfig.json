{
  "extends": "@mapform/typescript-config/nextjs.json",
  "ts-node": {
    "compilerOptions": {
    "module": "es2015",
      "moduleResolution": "node"
    }
  },
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "#*": ["./*"]   // Map #subpath to actual file location
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".eslintrc.cjs"
  ],
  "exclude": ["dist", "build", "node_modules"]
}

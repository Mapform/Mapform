{
  "extends": "@mapform/typescript-config/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "~/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    ".eslintrc.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "../../packages/mapform/global.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}